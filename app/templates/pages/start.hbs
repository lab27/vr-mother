{{!-- ---------- --}}
{{!-- top section --}}
<section id="claim" class="dark">
	<div class="row">
		<div class="container">
			<h1>Home To the Spoken Word.</h1>
			<div class="claim-cta-half">
			
				<a href="publish.html"><button href="#"><div class="icon megaphone"></div> Publish</button></a>
			</div>
<div class="claim-cta-half">
			
			<a href="listen.html"><button><div class="icon headphones"></div> Listen</button></a>
			</div>
		</div>
	</div>
	<div class="icon down-arrow"></div>
</section>
{{!-- ---------- --}}
{{!-- listen now --}}
<section id="listen-now" class="light">
	<div class="row">
		<div class="container">
			<h2>Listen Now</h2>
			<p class="lead">In the Voice Republic Archive you can listen to professional audio content from different areas: politics, culture, sciences and economy.</p>
		</div>
		<div id="talk-collection">
			{{#withFirst thumbs 6}}
			{{>landing-tile}}
			{{/withFirst}}
		</div>
	</div>
	<div class="row">
		<a href="#"><button>More Talks  &raquo;</button></a>
	</div>
</section>
{{!-- ---------- --}}
{{!-- coming up  --}}
<section id="coming-up" class="blue">
	<div class="row">
		<div class="container">
			<h2>Coming Up Live</h2>
		</div>
		<div id="talk-collection">
			{{#withFirst thumbs 6}}
			{{>landing-tile}}
			{{/withFirst}}
		</div>
	</div>
	<div class="row">
		<a href="#"><button>More Talks &raquo;</button></a>
	</div>
</section>
{{!-- ---------- --}}
{{!-- categories --}}
<section id="categories" class="dark">
	<div class="row">
		<div class="container">
			<h2>Categories</h2>
		</div>
		<div id="talk-collection" data-equalizer>
			{{#each  cats}}
			<div class="category" data-equalizer-watch>
				<a href="explore.html">
					<div class="icon {{icon}}"></div>
					<h3>{{this.name}}</h3>
					<p class="lead">{{this.description}}</p>
				</a>
				<hr>
			</div>
			{{/each}}
		</div>
	</div>
</section>
{{!-- ---------- --}}
{{!-- publishers  --}}
<section id="publishers" class="white">
	<div class="row">
		<div class="container">
			<h2>Some of the distinguished Publishers<br>on Voice Republic:</h2>
		</div>
	</div>
	<div class="row">
		<div id="publisher-collection" data-equalizer>
			{{#each  publishers}}
			<div class="publisher" data-equalizer-watch>
				<a href="profile.html">
					<img src="img/publishers/{{img}}.png" alt="">
					<h4>{{name}}</h4>
					<p class="lead">{{desc}}</p>
				</a>
				<hr>
			</div>
			{{/each}}
		</div>
	</div>
	<div class="row clearfix">
		<a href="explore.html"><button>More Publishers &raquo;</button></a>
	</div>
</section>
{{!-- ---------- --}}
{{!-- cta  --}}
<section id="cta" class="turquoise">
	<div class="row">
		<div class="container">
			<h1>Are you planning a conference or event?</h1>
			<a href="join.html"><button>Start Now</button></a><br>
			<a href="contact.html">or Contact us</a>
			<!-- <a href="contact.html"><button>Contact Us</button></a> -->
		</div>
	</div>
</section>
